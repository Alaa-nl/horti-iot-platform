# ====================================
# HORTI-IOT Backend Configuration
# ====================================
# Copy this file to .env and update with your values

# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=horti_iot
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password

# JWT Configuration (CRITICAL - Change these in production!)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long-change-this
JWT_REFRESH_SECRET=your-refresh-token-secret-also-32-chars-change-this
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# CORS Configuration (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window
LOGIN_MAX_ATTEMPTS=5          # Max login attempts before lockout
LOGIN_LOCKOUT_DURATION=1800   # Lockout duration in seconds (30 minutes)

# Security Configuration
BCRYPT_ROUNDS=12              # Number of bcrypt salt rounds
SESSION_SECRET=your-session-secret-change-in-production
COOKIE_SECURE=false           # Set to true in production with HTTPS

# Email Configuration (for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@horti-iot.com

# File Upload Configuration
MAX_FILE_SIZE=10485760        # 10MB in bytes
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Logging Configuration
LOG_LEVEL=info                # debug, info, warn, error
LOG_FILE=./logs/app.log
ENABLE_AUDIT_LOG=true

# API Configuration
API_PREFIX=/api
API_VERSION=v1

# Redis Configuration (optional, for production rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring (optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_2FA=false              # Two-factor authentication
ENABLE_API_DOCS=true          # Swagger/OpenAPI documentation
ENABLE_METRICS=false          # Prometheus metrics
ENABLE_HEALTH_CHECK=true      # Health check endpoints

# Default Admin Account (CHANGE IMMEDIATELY AFTER SETUP!)
DEFAULT_ADMIN_EMAIL=admin@horti-iot.com
DEFAULT_ADMIN_PASSWORD=ChangeMe123!