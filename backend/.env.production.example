# Backend Production Environment Variables
# Copy this to .env.production and fill in your values

# Server
NODE_ENV=production
PORT=3001

# Database (Use your cloud database credentials)
DB_HOST=your-database-host.com
DB_PORT=5432
DB_NAME=horti_iot
DB_USER=horti_user
DB_PASSWORD=your-secure-password

# JWT Secrets (Generate secure random strings)
JWT_SECRET=your-very-secure-jwt-secret-here
JWT_REFRESH_SECRET=your-very-secure-refresh-secret-here

# CORS (Your frontend URL)
CORS_ORIGIN=https://horti-iot-platform.vercel.app

# PhytoSense API
PHYTOSENSE_USERNAME=aaldrobe
PHYTOSENSE_PASSWORD=your-password

# AI Service (Optional)
AI_SERVICE_URL=http://localhost:8000

# API Keys
OPENWEATHERMAP_API_KEY=your-api-key
KNMI_API_KEY=your-api-key